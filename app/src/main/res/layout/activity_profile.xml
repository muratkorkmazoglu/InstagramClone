<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile.ProfileActivity">

    <TextView
            android:text="muratkorkmazoglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profileAdiToolbar"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/imgProfileSettings"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfileSettings"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="16sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_profile_options"
            android:id="@+id/imgProfileSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_discover_people"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfileSettings"
            app:layout_constraintEnd_toStartOf="@id/imgProfileSettings"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
    />
    <View
            android:layout_width="0dp" android:layout_height="2dp"
            android:background="@color/golgelik"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp" android:id="@+id/view"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circleProfileImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/golgelik"
            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/circleProfileImage" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/circleProfileImage" android:textStyle="bold"
            android:textColor="@color/siyah" android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:text="35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/circleProfileImage" android:textStyle="bold"
            android:textColor="@color/siyah" android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:text="35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/circleProfileImage"
            android:textStyle="bold" android:textColor="@color/siyah" android:textAlignment="center"
            android:textSize="18sp"/>
    <TextView
            android:text="gönderi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:textSize="14sp"/>
    <TextView
            android:text="takipci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:textSize="14sp"/>
    <TextView
            android:text="takip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/textView8" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:textSize="14sp"/>
    <TextView
            android:text="Profil Düzenle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintBottom_toBottomOf="@+id/circleProfileImage" android:layout_marginBottom="8dp"
            android:textAlignment="center" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circleProfileImage" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>