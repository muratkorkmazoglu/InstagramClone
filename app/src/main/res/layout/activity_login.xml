<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.LoginActivity">


    <View android:layout_height="2dp" android:layout_width="0dp" android:id="@+id/golgelik1"
          android:background="@color/golgelik"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="50dp"
          app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Hesabın yok mu?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/viewEposta" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="110dp"
            android:layout_marginEnd="80dp" app:layout_constraintTop_toBottomOf="@+id/golgelik1"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Kaydol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGirisYap" android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginBottom="16dp" app:layout_constraintTop_toBottomOf="@+id/golgelik1"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="16dp"
            android:background="@drawable/register_edit_text"
            android:id="@+id/etEmailTelorUsername" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:hint="Telefon Numarası, E-posta veya Kullanıcı Adı"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="16dp"
            android:background="@drawable/register_edit_text"
            android:id="@+id/etSifre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmailTelorUsername" android:hint="Şifre"/>
    <Button
            android:text="Giriş Yap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnGirisYap" android:layout_marginStart="16dp"
            android:textAllCaps="false"
            android:enabled="false"
            android:textColor="@color/mavi"
            android:background="@drawable/register_button"
            app:layout_constraintTop_toBottomOf="@+id/etSifre" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>